<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.phm.mapper.PetSupplyMapper">

    <select id="selectSupplyPage" resultType="com.phm.model.entity.PetSupply">
        SELECT
        id,
        name,
        description,
        price,
        shelf_time AS shelfTime,
        image_filename AS imageFilename
        FROM pet_supply
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="shelfTime != null">
                AND shelf_time = #{shelfTime}
            </if>
        </where>
    </select>

</mapper>
